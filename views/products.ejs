<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Products – OtaZora</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylenew.css">
</head>
<body class="bg-light">
  <div class="container-lg my-5">
    <h1 class="text-center fw-bold mb-4">All Products</h1>

    <!-- Back to Shop Button -->
    <div class="text-center mb-4">
      <a href="/SHOP.html" class="btn btn-outline-secondary">
        ← Back to Shop
      </a>
    </div>

    <!-- Products Table -->
    <table class="table table-hover table-striped table-bordered align-middle shadow-sm bg-white">
      <thead class="table-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product Name</th>
          <th scope="col">Description</th>
          <th scope="col" class="text-end">Price</th>
        </tr>
      </thead>
      <tbody>
        <% if (products.length > 0) { %>
          <% products.forEach((p, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><strong><%= p.name %></strong></td>
              <td><%= p.description %></td>
              <td class="text-end fw-bold text-success">
                $<%= p.price.toFixed(2) %>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="4" class="text-center text-muted py-4">
              No products found. Please check back later!
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
