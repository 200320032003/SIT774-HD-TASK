<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Feedback – OtaZora</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylenew.css">
</head>
<body class="bg-light">
  <div class="container-lg my-5">
    <h1 class="text-center fw-bold mb-4">User Feedback</h1>

    <!-- Back to Home Button -->
    <div class="text-center mb-4">
      <a href="/HOMEPAGE.html" class="btn btn-outline-secondary">
        ← Back to Home
      </a>
    </div>

    <!-- Feedback Table -->
    <table class="table table-hover table-striped table-bordered align-middle shadow-sm bg-white">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Email</th>
          <th>Message</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% if (feedback.length > 0) { %>
          <% feedback.forEach((f, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= f.name %></td>
              <td><%= f.email %></td>
              <td><%= f.message %></td>
              <td><%= new Date(f.created_at).toLocaleString() %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center text-muted py-4">
              No feedback submitted yet.
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
